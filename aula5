class Coruja1 {
    tamanho:number
    cor:string
    lugar:string

    constructor(corujaTamanho:number,corujaCor:string,corujaLugar){
        this.tamanho = corujaTamanho
        this.cor = corujaCor
        this.lugar = corujaLugar
}
    voar()void {
        console.log(`{$this.coruja} esta voando`)
    }
    
    gritando()void {
        console.log(`{$this.coruja} esta fazendo som`)
    }

    dormindo()void {
        console.log(`{$this.coruja} esta dormindo`)
    }
}


const aCoruja = nem Coruja(`10,cinza,arvore`)
console.log(aCoruja)
aCoruja.gritando() 

    
